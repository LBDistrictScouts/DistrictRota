<?xml version="1.0"?>
<ruleset name="App">

    <!-- DO NOT set installed_paths when using dealerdirect/phpcodesniffer-composer-installer -->
    <!-- It auto-registers standards (CakePHP, Slevomat, etc.) from vendor/ -->

    <rule ref="CakePHP"/>

    <!-- Use the actual sniff, then exclude Controllers -->
    <rule ref="SlevomatCodingStandard.TypeHints.ReturnTypeHint">
        <exclude-pattern>*/src/Controller/*</exclude-pattern>
    </rule>

    <file>src/</file>
    <file>tests/</file>
</ruleset>
